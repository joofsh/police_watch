.container-fluid
  .row
    .col-md-10.col-md-offset-2
      %h1 Login
      .red
        - if flash[:notice]
          = flash[:notice]
      = form_tag sessions_path, class: 'form-inline' do
        .form-group
          = label_tag :email
          = text_field_tag :email
          = label_tag :password
          = password_field_tag :password
          = submit_tag "Log In", class: 'btn btn-success'
